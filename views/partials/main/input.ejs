<div class='container input-body'>
    <div class='text-viewer-title'>
        <h4 style='margin-bottom: 0px'>Filters</h4>
    </div>
    <div class='row'>
        <div class='col'>
            <div class='row'>
                <div class='card input-card'>
                    <div class='card-body' style='padding-left: 0px; padding-right: 0px; padding-bottom: 0px;'>
                        <h5 class='card-title' data-bs-toggle='tooltip' data-bs-placement='top' title='File Types'>
                            File Types
                        </h5>
                        <span class='light-text' style='color: rgb(253, 53, 53);'>* Required</span>
                        <div class='container d-flex justify-content-center'>
                            <div class='p-2'>
                                <input id='input-pdf-file' type='checkbox' onclick='SiteMapHome.updateFileTypes()'/>
                                <label for='input-pdf-file'> .pdf</label><br>
                            </div>
                            <div class='p-2'>
                                <input id='input-docx-file' type='checkbox' onclick='SiteMapHome.updateFileTypes()'/>
                                <label for='input-docx-file'> .docx</label><br>
                            </div>
                            <div class='p-2'>
                                <input id='input-txt-file' type='checkbox' onclick='SiteMapHome.updateFileTypes()'/>
                                <label for='input-txt-file'> .txt</label><br>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% var inputTypes = [{title:'Regular Expression',tId:'regex-input'},{title:'File Includes',tId:'file-includes'},{title:'Folder Includes',tId:'folder-includes'}]; %>
            <% inputTypes.forEach((inputType) => { %>
                <div class='row'>
                    <%- include('./input-card.ejs', inputType) %>
                </div>
                <div class='row' style='text-align: left;'>
                    <%- include('./input-data.ejs', inputType) %>
                </div>
            <% }); %>
        </div>
    </div>
</div>